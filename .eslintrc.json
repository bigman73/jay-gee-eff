{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:jsdoc/recommended"],
  "plugins": ["jsdoc"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off"
  }
}
